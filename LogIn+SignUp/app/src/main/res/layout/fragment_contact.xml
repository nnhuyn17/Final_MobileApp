<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <!-- Title -->

    <!-- Date Meeting -->
    <TextView
        android:id="@+id/contacttitle"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:text="Add Activity"
        android:textColor="#13bbff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDateMeeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Meeting Date"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_shade" />

    <EditText
        android:id="@+id/editTextDateMeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Choose a date ..."
        android:textColorHint="@color/white"
        android:background="#30ffffff"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="18sp"
        android:focusable="false"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:inputType="none" />

    <!-- Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Time"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_shade" />

    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:padding="10dp"
        android:textColor="@android:color/white" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Message"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_shade" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Write a message here ..."
        android:textColorHint="@color/white"
        android:background="#30ffffff"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="18sp"
        android:inputType="textMultiLine" />

    <Button
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:onClick="onSubmitClicked" />


</LinearLayout>
